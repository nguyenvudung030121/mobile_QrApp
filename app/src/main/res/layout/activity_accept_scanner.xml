<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".acceptScanner"
    android:background="@drawable/background_second"
    >
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="142dp"
            android:layout_height="87dp"
            android:src="@drawable/logo"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:id="@+id/nameGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/name_group"
            android:layout_toRightOf="@+id/logo"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/nameRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý"
            android:textSize="20dp"
            android:layout_below="@+id/nameGroup"
            android:layout_toRightOf="@+id/logo"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="15dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/body"
        android:layout_above="@+id/footer"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_noti"
            android:text="Thông báo"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginLeft="40dp"
            android:layout_above="@+id/notification_layout"
            />

        <RelativeLayout
            android:id="@+id/notification_layout"
            android:layout_width="270dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:id="@+id/imgview_notificaton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/notification"
                >
            </ImageView>

            <TextView
                android:id="@+id/content_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Xac nhan"
                android:textColor="@color/black"
                android:textSize="18dp" />
            <Button
                android:id="@+id/button_accept"
                android:layout_width="78dp"
                android:layout_height="35dp"
                android:background="@drawable/custom_savebutton"
                android:fontFamily="@font/roboto_regular"
                android:text="Xác nhận"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginRight="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="20dp"
                />

            <Button
                android:id="@+id/button_denied"
                android:layout_width="78dp"
                android:layout_height="35dp"
                android:background="@drawable/custom_backbuttno"
                android:fontFamily="@font/roboto_regular"
                android:text="Hủy"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="20dp"
                />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle_bottm"
            />
        <TextView
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng đài hỗ trợ"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            />
        <TextView
            android:layout_marginRight="55dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1900 1234"
            android:textColor="#1587D9"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            />

    </RelativeLayout>
</RelativeLayout>